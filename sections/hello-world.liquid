    // Setup event listeners
    function setupEventListeners() {
        // View All button for blog posts
        const viewAllBtn = document.getElementById('viewAllBtn');
        if (viewAllBtn) {
            viewAllBtn.addEventListener('click', function() {
                alert('View All Blog Posts clicked! In a real application, this would navigate to the blog page.');
            });
        }
        
        // Read More buttons for blog posts
        document.addEventListener('click', function(e) {
            if (e.target.closest('.read-more-btn')) {
                const btn = e.target.closest('.read-more-btn');
                const postTitle = btn.getAttribute('data-title');
                alert(`Reading more about: "${postTitle}"`);
            }
        });
        
        // Pause marquee on hover
        const marqueeContainers = document.querySelectorAll('.animate-marquee, .animate-marquee-reverse');
        marqueeContainers.forEach(container => {
            container.addEventListener('mouseenter', function() {
                this.style.animationPlayState = 'paused';
            });
            
            container.addEventListener('mouseleave', function() {
                this.style.animationPlayState = 'running';
            });
        });
        
        // Blog card click handlers
        const blogCards = document.querySelectorAll('.blog-card');
        blogCards.forEach(card => {
            card.addEventListener('click', function(e) {
                // Only trigger if not clicking on the Read More button
                if (!e.target.closest('.read-more-btn')) {
                    const title = this.querySelector('h3').textContent;
                    alert(`Opening blog post: "${title}"`);
                }
            });
        });
    }
